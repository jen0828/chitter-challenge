<head>
  <link rel="stylesheet" href="style.css">
  </head>
<body style="background-color:powderblue;">

<% if @user %>
  <h2 style="color:blue;">Welcome, <%= @user.email %></h2>
  <form action="/sessions/destroy" method="post">
    <button type="submit" class="btn btn-lg submit" value="Sign out">Sign out</button>
  </form>
<% end %>


<h2 style="color:blue;">Latest peeps: </h2>

<ol>
  <% @peeps.reverse.each do |peep| %>
    <li><%= peep %></li>
  <% end %>
<ol>


<style> 
input {
  width: 50%;
  height: 8%;
}
input[type=submit]:hover {
  background-color: #3CBC8D;
}
</style>

<br><br>
<center>
<img src="https://image.flaticon.com/icons/png/512/1409/1409937.png" alt="chick" width="50" height="50">
<h2 style="color:blue;">What's new today?</h2>
<form action="/peeps" method="post">
<input type="text" name="peep" placeholder="Write your peep here :) "/>
<input type="submit" style="color:blue;" value="Click to post" />
</form>

